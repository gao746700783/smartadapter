<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smart.recycler.MainActivity">

    <Button
        android:id="@+id/btn_base_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本使用"/>

    <Button
        android:id="@+id/btn_pull_up_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上下拉刷新"/>

    <Button
        android:id="@+id/btn_drag_n_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drag-n-Drop"/>

    <Button
        android:id="@+id/btn_audio_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Loader"/>

    <Button
        android:id="@+id/btn_audio_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Play"/>

</LinearLayout>
